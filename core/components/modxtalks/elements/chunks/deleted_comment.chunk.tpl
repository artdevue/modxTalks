<div class="mt_mtComment" data-index="[[+index]]" data-idx="[[+idx]]">
    [[+timeMarker]]
    <div class="mt_post mt_hasControls mt_deleted" id="mt_comment-[[+id]]" data-id="[[+id]]">
        <div class="mt_postContent mt_thing">
            <div class="mt_postHeader">
                <div class="mt_info">
                    <h3>[[+name]]</h3>
                    <a href="[[+link]]" class="mt_time" title="[[+timeago]]">[[+funny_date]]</a>
                </div>
                <div class="mt_controls">
                    <span><span title="[[+delete_date]]">[[+funny_delete_date]]</span> [[+deleted_by]] [[+deleteUser]]</span>
                    <a href="[[+link_restore]]" title="[[+restore]]" class="mt_control-restore">[[+restore]]</a>
                </div>
            </div>
        </div>
    </div>
</div>