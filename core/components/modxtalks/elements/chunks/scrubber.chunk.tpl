<div class="mt_scrubberColumn">
    <div class="mt_scrubberContent">
        <!-- Timeline scrubber -->
        <ul class="mt_scrubber mt_timelineScrubber">
            <li class="mt_scrubber-op" data-index="first"><a href="[[+start_link]]#conversationPosts">[[+start]]</a>
            </li>
            [[+months]]
            <li class="mt_scrubber-now" data-index="last"><a href="[[+now_link]]#mt_cf_conversationReply">[[+now]]</a>
            </li>
        </ul>
        <ul class="mt_scrubber_total mt_noncom">
            <li class="mt_big_button">
                <div class="mt_big_count"><span></span></div>
                <div class="mt_out_border">
                    <div class="mt_button_wrapper">
                        <div class="mt_in_border">
                            <div title="[[+modxtalks_total]]: [[+count_talks]]" class="mt_the_button mt_tt-mt">
                                <span class="mt_i_32_support"></span>
                                <span class="mt_total_mt">[[+count_talks]]</span>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
        <a href="#reply" class="mt_button" id="mt_jumpToReply"><span class="mt_icon-add"></span> [[+reply]]</a>
    </div>
</div>
